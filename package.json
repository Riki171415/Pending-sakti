{
  "name": "pendingsaktiV1",
  "productName": "Pending Sakti",
  "description": "Percepatan Penyelesaian Pending Klaim JKN",
  "author": "Riki Permana Putra",
  "version": "1.2.1",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development ELECTRON_IS_DEV=1 electron .\"",
    "electron:build": "vite build && electron-builder -wl",
    "electron:preview": "vite build && cross-env ELECTRON_IS_DEV=1 electron ."
  },
  "dependencies": {
    "@capacitor/android": "^8.1.0",
    "@capacitor/browser": "^8.0.1",
    "@capacitor/core": "^8.1.0",
    "@capacitor/ios": "^8.1.0",
    "@capgo/capacitor-printer": "^8.0.10",
    "@google/generative-ai": "^0.20.0",
    "cors": "^2.8.6",
    "lucide-react": "^0.563.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^9.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^8.1.0",
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.1.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "javascript-obfuscator": "^5.3.0",
    "jimp": "^1.6.0",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "vite": "^7.3.1",
    "vite-plugin-javascript-obfuscator": "^3.1.0",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.claimaudit.app",
    "productName": "Pending Sakti",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist",
      "electron/main.cjs",
      "preload-electron.cjs",
      "public",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main.cjs"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "tar.gz"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Pending Sakti",
      "license": "build/license.txt"
    }
  }
}